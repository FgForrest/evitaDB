query(
    collection('Product'),
    filterBy(
        hierarchyWithin(
            'categories',
            attributeEquals('code', 'e-readers')
        ),
        attributeEquals('status', 'ACTIVE')
    ),
    require(
        facetSummary(
            COUNTS,
            entityFetch(attributeContent('code')),
            entityGroupFetch(attributeContent('code'))
        )
    )
)