query(
    collection("Product"),
    filterBy(
        hierarchyWithin(
            "categories",
            attributeEquals("code", "audio")
        )
    ),
    require(
        hierarchyOfReference(
            "categories",
            children(
                "subcategories",
                entityFetch(attributeContent("code")),
                stopAt(distance(1))
            )
        )
    )
)