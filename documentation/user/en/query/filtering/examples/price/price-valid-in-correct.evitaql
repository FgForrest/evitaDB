query(
    collection('Product'),
    filterBy(
        hierarchyWithin(
            'categories',
            attributeEquals('code', 'christmas-electronics')
        ),
        priceInPriceLists('christmas-prices', 'basic'),
        priceInCurrency('EUR'),
        priceValidIn(2023-12-03T10:15:30+01:00)
    ),
    require(
      entityFetch(
        attributeContent('code'),
        priceContentRespectingFilter()
      )
    )
)